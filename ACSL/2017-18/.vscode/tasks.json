{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ACSL Enclosure",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "2-ACSL-Enclosure.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run ACSL Enclosure",
            "type": "shell",
            "command": "./a.exe",
            "group": {
                "isDefault" : true
            }
        }
    ]
}